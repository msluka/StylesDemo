<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StylesDemo.MainPage">
    
    <ContentPage.Resources>
        
        <Color x:Key="bgColor">#323031</Color>
        
        <Style TargetType="VerticalStackLayout">
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Spacing" Value="25"/>
        </Style>
        
        <Style TargetType="Button"
               x:Key="btnStyle">
            <Setter Property="BackgroundColor" Value="{StaticResource bgColor}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="TextColor" Value="#ffc857"/>
        </Style>
        
    </ContentPage.Resources>

    <ScrollView>

        <ScrollView.Resources>
            <Style TargetType="VerticalStackLayout">
                <Setter Property="VerticalOptions" Value="Start"/>
            </Style>
        </ScrollView.Resources>

        <VerticalStackLayout>

            <Button Text="LOGIN" Style="{StaticResource btnStyle}"/>
            <Button Text="VISIT"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
